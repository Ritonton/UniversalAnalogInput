<UserControl x:Class="UniversalAnalogInputUI.Controls.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <TeachingTip x:Name="ToastNotification"
                 IsOpen="False"
                 PreferredPlacement="Bottom"
                 PlacementMargin="20,20,20,20"
                 ShouldConstrainToRootBounds="False"
                 TailVisibility="Collapsed"
                 IsLightDismissEnabled="False">

        <Grid Padding="8,6" MaxWidth="400">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <FontIcon x:Name="ToastIcon"
                     Grid.Column="0"
                     FontFamily="Segoe MDL2 Assets"
                     Glyph="&#xE946;"
                     FontSize="16"
                     VerticalAlignment="Center"/>

            <StackPanel Grid.Column="2"
                       Spacing="4"
                       VerticalAlignment="Center">
                <TextBlock x:Name="ToastTitle"
                          Text="Title"
                          FontWeight="SemiBold"
                          FontSize="14"
                          TextWrapping="NoWrap"
                          TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="ToastMessage"
                          Text="Message"
                          FontSize="12"
                          TextWrapping="NoWrap"
                          TextTrimming="CharacterEllipsis"
                          Opacity="0.8"/>
            </StackPanel>
        </Grid>
    </TeachingTip>
</UserControl>